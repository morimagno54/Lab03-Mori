<Window x:Class="Lab03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label HorizontalAlignment="Center" Margin="0,0,180,80" VerticalAlignment="Center">Buscar por Nombre:</Label>
        <TextBox Name="Textbox1"  HorizontalAlignment="Center" Margin="60,0,0,80" VerticalAlignment="Center" MinWidth="120" MinHeight="20" MaxWidth="500" MaxHeight="50"/>
        <Button Name="btnSearch" Background="Gray" HorizontalAlignment="Center" Margin="230,0,0,80" VerticalAlignment="Center" Click="btnSearch_Click">Buscar</Button>
        <Button Name="btn2" Background="Gray" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Click="btn2_Click">Listar Estudiantes</Button>
        <DataGrid Height="148" HorizontalAlignment="Center" Margin="12,0,0,50" Name="dataGrid1" VerticalAlignment="Bottom" Width="225" />
    </Grid>
    
</Window>
